<%- include('../partials/header'); %>
<div class="container post">
    <div class="row divt">
        <div class="col-12" style="text-align: center;">
            <span>Edit Post</span>
        </div>
    </div>
    <div class="row">
        <div class="col-12"><br>
           <form action="" method="post" class="editor">
               <input type="hidden" name="id" value="<%= data.id %>">
               <label for="title">Post Title:</label>
               <input type="text" name="title" id="title" placeholder="Post Title" value="<%= data.title %>" required>
               <label for="desc">Post Description:</label>
               <textarea name="desc" id="desc" cols="30" rows="3" placeholder="Enter Description" required><%= data.desc %></textarea>
               <input type="submit" value="Edit" name="edit_post">
           </form>
        </div>
    </div><br>
    <div class="col-12">
        <a href="/admin">Go Back</a>
    </div><br>
</div>
<%- include('../partials/footer'); %>